<?xml version="1.0" encoding="UTF-8"?>
<config>
	<fieldset name="COM_JOOMLEAGUE_EXT_EXTENDED_PREFERENCES">
		
    <field name="COM_JOOMLEAGUE_EXT_MATCH_TVBROADCAST" type="textarea"
			rows="4" cols="50" label="COM_JOOMLEAGUE_EXT_MATCH_TVBROADCAST"
			description="COM_JOOMLEAGUE_EXT_MATCH_TVBROADCAST_DESC">
		</field>
		
    <field name="COM_JOOMLEAGUE_EXT_MATCH_WEATHER" type="list" label="COM_JOOMLEAGUE_EXT_MATCH_WEATHER"
			description="COM_JOOMLEAGUE_EXT_MATCH_WEATHER_DESC">
			<option value=""></option>
			<option value="dry">COM_JOOMLEAGUE_EXT_MATCH_WEATHER_DRY</option>
			<option value="rainy">COM_JOOMLEAGUE_EXT_MATCH_WEATHER_RAINY</option>
			<option value="sunny">COM_JOOMLEAGUE_EXT_MATCH_WEATHER_SUNNY</option>
			<option value="windy">COM_JOOMLEAGUE_EXT_MATCH_WEATHER_WINDY</option>
			<option value="snowing">COM_JOOMLEAGUE_EXT_MATCH_WEATHER_SNOWING</option>
      <option value="foggy">COM_JOOMLEAGUE_EXT_MATCH_WEATHER_FOGGY</option>
		</field>
		
    <field name="COM_JOOMLEAGUE_EXT_MATCH_TEMPERATURE" type="text"
			label="COM_JOOMLEAGUE_EXT_MATCH_TEMPERATURE" description="COM_JOOMLEAGUE_EXT_MATCH_TEMPERATURE_DESC">
		</field>
		
    <field name="COM_JOOMLEAGUE_EXT_MATCH_FIELDCONDITION" type="list"
			label="COM_JOOMLEAGUE_EXT_MATCH_FIELDCONDITION" description="COM_JOOMLEAGUE_EXT_MATCH_FIELDCONDITION_DESC">
			<option value=""></option>
			<option value="normal">COM_JOOMLEAGUE_EXT_MATCH_FIELDCONDITION_NORMAL</option>
			<option value="fielddry">COM_JOOMLEAGUE_EXT_MATCH_FIELDCONDITION_DRY</option>
			<option value="wet">COM_JOOMLEAGUE_EXT_MATCH_FIELDCONDITION_WET</option>
      <option value="snow">COM_JOOMLEAGUE_EXT_MATCH_FIELDCONDITION_SNOW</option>
		</field>
		
<field name="formation1" type="sql"  label="COM_JOOMLEAGUE_EXT_MATCH_FORMATION_HOME" description="COM_JOOMLEAGUE_EXT_MATCH_FORMATION_HOME_DESC"
query="SELECT name AS value, name AS formation1 FROM #__joomleague_rosterposition where short_name = 'HOME_POS' ORDER BY name" >
</field>

<field name="formation2" type="sql"  label="COM_JOOMLEAGUE_EXT_MATCH_FORMATION_AWAY" description="COM_JOOMLEAGUE_EXT_MATCH_FORMATION_AWAY_DESC"
query="SELECT name AS value, name AS formation2 FROM #__joomleague_rosterposition where short_name = 'AWAY_POS'  ORDER BY name" >
</field>

	</fieldset>
</config>
