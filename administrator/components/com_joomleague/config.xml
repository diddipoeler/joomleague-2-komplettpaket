			preview="show">			
		</field>
		<field name="ph_player" type="media"
			default="images/com_joomleague/database/placeholders/placeholder_150_2.png"
			label="COM_JOOMLEAGUE_SETTINGS_LABEL_PH_PLAYER" 
			description="COM_JOOMLEAGUE_SETTINGS_DESCR_PH_PLAYER"
			directory="images/com_joomleague/database/placeholders/"
			preview="show">			
		</field>
		<field name="ph_team" type="media"
			default="images/com_joomleague/database/placeholders/placeholder_450_2.png"
			label="COM_JOOMLEAGUE_SETTINGS_LABEL_PH_TEAM" 
			description="COM_JOOMLEAGUE_SETTINGS_DESCR_PH_TEAM"
			directory="images/com_joomleague/database/placeholders/"
			preview="show">			
		</field>
	</fieldset>
	<fieldset name="Permissions" label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC">
		<field name="rules" type="rules" label="COM_JOOMLEAGUE_SETTINGS_ACCESS_COMPONENT"
			class="inputbox" filter="rules" validate="rules" component="com_joomleague"
			section="component" />
	</fieldset>

</config>
